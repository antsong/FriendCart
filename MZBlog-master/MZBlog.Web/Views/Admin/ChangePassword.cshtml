@inherits Nancy.ViewEngines.Razor.NancyRazorViewBase<dynamic>
@{
    Layout = "_AdminLayout.cshtml";
}
<div class="well col-md-4 col-md-offset-4">
    <form action="~/mz-admin/change-password" method="post" role="form">
        <h2>修改密码</h2>
        <div class="form-group">
            <input type="password" class="form-control" name="OldPassword" placeholder="旧密码" required />
        </div>
        <div class="form-group">
            <input type="password" class="form-control" name="NewPassword" placeholder="新密码" required />
        </div>
        <div class="form-group">
            <input type="password" class="form-control" name="NewPasswordConfirm" placeholder="新密码确认" required />
        </div>
        <button type="submit" class="btn btn-primary">修改</button>
    </form>
</div>
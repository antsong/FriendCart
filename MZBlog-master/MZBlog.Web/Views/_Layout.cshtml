@using MZBlog.Core.Extensions
@inherits Nancy.ViewEngines.Razor.NancyRazorViewBase<dynamic>
<!DOCTYPE html>
<html lang="zh-cn">
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title - @ViewBag.Settings.Value.SiteName</title>
    <meta name="description" content="@ViewBag.Settings.Value.SiteDescription" />
    <meta name="keywords" content="@ViewBag.Settings.Value.SiteKeywords" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />
    <link rel="shortcut icon" href="@Url.Content("~/favicon.ico")" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="alternate" title="RSS" type="application/rss+xml" href="~/rss" />
    <!--[if lt IE 9]>
        <script src="~/scripts/html5shiv.js"></script>
    <![endif]-->
    <link href="@Url.Content("~/content/css/mzblog.min.css?v=20150402")" rel="stylesheet" />
</head>
<body>
    <nav class="navbar navbar-default navbar-fixed-top" role="navigation">
        <div class="container">
            <div class="row">
                <div class="navbar-header">
                    <a class="navbar-brand" href="@Url.Content("~/")">@ViewBag.Settings.Value.SiteHeader</a>
                </div>
                <div class="navbar-header pull-right">
                    <ul class="nav navbar-nav">
                        <li>
                            <form class="navbar-form navbar-left" role="search" action="~/mz-search" method="post">
                                <div class="form-group">
                                    <input type="text" class="form-control" placeholder="输入内容按回车键搜索" id="content" name="content" required>
                                </div>
                            </form>
                        </li>
                        <li>
                            @if (!MZBlog.Web.Security.FormsAuthentication.GetAuthUsernameFromCookie(Context).IsNullOrWhitespace())
                            {
                                <a class="navbar-img" href="~/mz-admin">
                                    <img src="~/content/images/szy.jpg" width="36" height="36" class="img-circle" />
                                </a>
                            }
                        </li>
                    </ul>
                </div>
            </div>
        </div>

    </nav>
    <div class="container" id="main">
        <div class="row">
            <div class="col-lg-3 visible-lg sidebar">
                @Html.Partial("_AboutMe")
                <div class="panel panel-default">

                    <div class="panel-heading">
                        <span class="glyphicon glyphicon-sort-by-order"></span>
                        <strong>
                            最近的文章
                        </strong>
                    </div>

                    <div class="list-group">
                        @foreach (var title in ViewBag.Recent.Value.BlogPostsSummaries)
                        {
                            <a href="@Url.Content(title.Link)" class="list-group-item">@title.Title</a>
                        }
                    </div>
                </div>
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <span class="glyphicon glyphicon-tags"></span>
                        <strong>
                            标签云
                        </strong>
                    </div>
                    <div class="list-group">
                        @foreach (MZBlog.Core.Documents.Tag tag in ViewBag.TagCould.Value.Tags)
                        {
                            <a href="@Url.Content("~/tag/" + tag.Slug)" class="list-group-item">
                                <span class="badge">@tag.PostCount</span>
                                @tag.Name
                            </a>
                        }
                    </div>
                </div>
                @Html.Partial("_Links")
            </div>
            <div class="col-lg-9">
                @RenderBody()

                <div class="zh-backtotop" style="opacity: 1;display:none;">
                    <a data-action="backtotop" data-tip="s$r$回到顶部" href="javascript:;" class="btn-backtotop btn-action">
                        <div class="arrow"></div>
                        <div class="stick"></div>
                    </a>
                </div>
            </div>
        </div>
    </div>
    <footer class="footer">
        <div class="container">
            <p class="text-center">
                <a href="~/send-message">发送短信</a>|
                <a href="~/mz-login">登录/注册</a>|
                <a href="~/html5" target="_blank">Html5</a>|
                <a href="~/rss">Rss</a>
                &nbsp;&nbsp;Power by antblog &copy; @DateTime.Now.Year
            </p>
        </div>
    </footer>
    <script src="~/scripts/jquery-3.2.1.min.js"></script>
    <script src="~/scripts/bootstrap.min.js?v=3.3.2"></script>
    <script src="~/scripts/main.js"></script>
    @*<script type="text/javascript" id="bdshare_js" data="type=slide&amp;img=2&amp;pos=right&amp;uid=797298" src="http://bdimg.share.baidu.com/static/js/bds_s_v2.js?cdnversion=397950"></script>*@
    @RenderSection("PostScripts", false)
    </body>
</html>

@using System.Drawing
@model IQueryable<Entity.FileDocement>

@{
    ViewBag.Title = "title";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div id="page-wrapper">
    <div class="row">
        <div class="col-lg-10">
            <h1 class="page-header">
                试题列表
                @Html.ActionLink("创建试题", "Create", "Test")
            </h1>
        </div>
        <!-- /.col-lg-10 -->
        <div class="col-lg-2">
        </div>
    </div>

    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    ItemType Rows
                </div>
                <!-- /.panel-heading -->
                <div class="panel-body">
                    <table class="table table-striped table-bordered table-hover" id="itemtype-table">
                        <thead>
                            <tr>
                                <th>Id</th>
                                <th>大小</th>
                                <th>名称</th>
                                <th>图片</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var file in Model)
                            {
                                <tr>
                                    <td>@file.Id</td>
                                    <td>@file.Size</td>
                                    <td>@file.Name.Replace(" ","_")</td>
                                    <td>
                                        <img src="Code?id=@file.Id" height="60"/>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>

                </div>
                <!-- /.panel-body -->
            </div>
            <!-- /.panel -->
        </div>
    </div>
    <!-- /.row -->

</div>

@section Scripts {
    @Scripts.Render("~/bundles/admin/table")
}